orilla(granjero,origen).
orilla(lechuga,origen).
orilla(oveja,origen).
orilla(lobo,origen).
mismaorilla(granjero,oveja).
mismaorilla(granjero,lobo).
mismaorilla(granjero,lechuga).
last(0).
move(oveja) :- mismaorilla(granjero,oveja),/+last(oveja).
move(0)     :- orilla(granjero,destino),orilla(X,origen).
move(X)     :- orilla(granjero,origen),mismaorilla(granjero,X).